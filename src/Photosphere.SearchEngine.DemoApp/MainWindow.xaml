<Window x:Class="Photosphere.SearchEngine.DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Photosphere.SearchEngine.DemoApp.Views"
        mc:Ignorable="d"
        Title="Photosphere.SearchEngine — Words search engine demo"
        Height="700"
        Width="1000"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <views:IndexManagementPanel Grid.Column="0" />
        <views:SearchPanel Grid.Column="1" />
    </Grid>
</Window>